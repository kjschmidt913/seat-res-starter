.title
  display inline
  position relative
  top 0.6em

footer
  margin 5%

#footerLinks
  display inline
  word-spacing 2em
  padding-left 2em

#copyrightInfo
  display inline

.seat-chart
  width 90%
  margin 0 auto

h1
  display inline

#point
  vertical-align text-bottom
  display inline
  font-size 1.8em

.available
  border-radius 20px
  background-color #3498db
  width 15%
  margin .5%
  min-height 100px
  display inline-block
  text-align center
  &:before
    padding-left 37px
    font-size 5px
  &:hover
    background-color #2980b9
    border-radius 20px
    display inline-block

.reserved
  border-radius 20px
  background-color #2c3e50
  width 15%
  margin .5%
  min-height 100px
  display inline-block
  color white
  &:after
    font-size 5px
    padding-left 18px
  &:hover
    background-color #34495e
    border-radius 20px
    display inline-block

#reserve-btn
  border 1px solid #000000
  border-radius 20px
  background-color #52bb37
  color #ffffff

.input-field
  padding-left 5%

.message-div
  padding-right 6%

textarea
  width 100%

@media only screen and (max-width : 900px)
  .title
    display block
    margin-top 0em
    margin-bottom 2em

